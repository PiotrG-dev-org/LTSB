<aura:component controller="BoatReviews" description="BoatReviews" implements="flexipage:availableForAllPageTypes">
    <aura:attribute name="boat" type="Boat__c" access="public"/>
    <aura:attribute name="boatReviews" type="BoatReview__c[]" access="private"/>

    <aura:method name="refresh" action="{!c.doInit}"/>

    <aura:handler name="init" value="{!this}" action="{!c.doInit}" />
    <aura:handler name="change" value="{!v.boat}" action="{!c.refresh}"/>


    <ui:scrollerWrapper class="scroller">
        <aura:if isTrue="{!!empty(v.boatReviews)}">
            <div class="slds-feed">
            <aura:iteration items="{!v.boatReviews}" var="boatReview">
                <div class="slds-feed__item">
                    <article class="slds-post">
                        <header class="slds-post__header slds-media">
                            <div class="slds-media__figure">
                                <div class="slds-avatar slds-avatar_circle slds-avatar_medium">
                                    <img src="{!boatReview.CreatedBy.SmallPhotoUrl}"/>
                                </div>
                            </div>
                            <div class="slds-media__body">
                                <div class="slds-grid slds-grid_align-spread slds-has-flexi-truncate">
                                    <p><a href="javascript:void(0);" data-userid="{!boatReview.CreatedBy.Id}" onclick="{!c.onUserInfoClick}"> {!boatReview.CreatedBy.Name} </a> â€” {!boatReview.CreatedBy.CompanyName}</p>
                                </div>
                                <lightning:formattedDateTime value="{!boatReview.CreatedDate}" year="numeric" month="numeric" day="numeric"  hour="2-digit" minute="2-digit" timeZoneName="short"/>
                            </div>
                        </header>
                        <div class="slds-post__header">
                            <p>{!boatReview.Name}</p>
                        </div>
                        <lightning:formattedRichText value="{!boatReview.Comment__c}"/>
                        <c:FiveStarRating value="{!boatReview.Rating__c}" readonly="true"/>
                    </article>
                </div>
            </aura:iteration>
        </div>
        <aura:set attribute="else">
            <div class="slds-align_absolute-center">No reviews available</div>
        </aura:set>
    </aura:if>
    </ui:scrollerWrapper>
</aura:component>
